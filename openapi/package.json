{
  "scripts": {
    "generate:client": "openapi-generator-cli generate -i openapi.yaml -g typescript-fetch -o ../frontend/src/generated/openapi",
    "generate:types": "openapi-typescript openapi.yaml -o ../backend/src/generated/openapi.ts",
    "generate": "npm run generate:client && npm run generate:types"
  },
  "devDependencies": {
    "@openapitools/openapi-generator-cli": "^2.20.2",
    "openapi-typescript": "^7.8.0"
  }
}
